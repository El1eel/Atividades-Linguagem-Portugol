programa {
  funcao inicio() {
    // DECLARAR
   real base, altura
   real calculo
    // SOLICITAR
   escreva("QUAL É A BASE?:")
   leia(base)

   escreva("QUAL É A ALTURA?:")
   leia(altura) 
    // CALCULAR 
   calculo = base * altura / 2

    // MOSTRAR

   escreva("RESULTADO")
   escreva("\nCalculo:", calculo)
  }
}
